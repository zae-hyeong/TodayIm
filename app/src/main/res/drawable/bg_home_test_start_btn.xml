<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="8dp">
        <shape
            android:shape="oval">
            <size
                android:width="260dp"
                android:height="260dp"/>
            <solid
                android:color="@color/point"/>
        </shape>
    </item>

    <item>
        <shape
            android:shape="oval">
            <size
                android:width="250dp"
                android:height="250dp"
                />
            <solid
                android:color="@color/main"/>
            <stroke
                android:width="0.5dp"
                android:color="@color/point"/>
        </shape>
    </item>

</layer-list>
