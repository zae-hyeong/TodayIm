<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval">
            <padding
                android:bottom="1.5dp"
                android:left="0.5dp"
                android:right="0.5dp"/>

            <size
                android:width="240dp"
                android:height="240dp"/>
            <solid
                android:color="@color/point"/>
        </shape>
    </item>

    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="@color/main"/>
            <stroke
                android:width="0.5dp"
                android:color="@color/point"/>
        </shape>
    </item>

</layer-list>
