<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

<!--        <ProgressBar-->
<!--            android:id="@+id/progressbar"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="30dp"-->
<!--            android:gravity="center"-->
<!--            style="?android:attr/progressBarStyleHorizontal"-->
<!--            android:progressDrawable="@layout/layout_analyze_progressbar"-->
<!--            android:orientation="vertical" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_msg"
                android:textSize="20sp"
                android:textColor="@color/point"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <GridLayout
                android:id="@+id/test_gridLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:columnCount="2"
                android:rowCount="2"
                android:foregroundGravity="center"
                android:useDefaultMargins="true"
                >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/test_c1_btn"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="버튼 1"
                    android:textSize="20sp"
                    android:layout_margin="8dp"
                    android:textColor="@color/point"
                    android:background="@drawable/bg_custom_shadow_btn"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/test_c2_btn"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="버튼 2"
                    android:textSize="20sp"
                    android:layout_margin="8dp"
                    android:textColor="@color/point"
                    android:background="@drawable/bg_custom_shadow_btn"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/test_c3_btn"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="버튼 3"
                    android:textSize="20sp"
                    android:layout_margin="8dp"
                    android:textColor="@color/point"
                    android:background="@drawable/bg_custom_shadow_btn"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/test_c4_btn"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="버튼 4"
                    android:textSize="20sp"
                    android:layout_margin="8dp"
                    android:textColor="@color/point"
                    android:background="@drawable/bg_custom_shadow_btn"
                    />

            </GridLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>