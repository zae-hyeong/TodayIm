<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <!--
            <ProgressBar
                android:id="@+id/test_progress"
                android:background="@drawable/bg_home_progressbar"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:progress="25"
                android:layout_marginBottom="40dp"
                />
            -->
            <com.dinuscxj.progressbar.CircleProgressBar
                android:id="@+id/days_graph"
                android:layout_width="400dp"
                android:layout_height="400dp"
                app:progress_shader="sweep"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_msg"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <GridLayout
                android:id="@+id/test_gridLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:columnCount="2"
                android:rowCount="2"
                android:foregroundGravity="center"
                android:useDefaultMargins="true"
                >

                <Button
                    android:id="@+id/test_c1_btn"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="버튼 1"
                    android:textSize="20sp"
                    android:background="@drawable/bg_test_btn"
                    />

                <Button
                    android:id="@+id/test_c2_btn"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="버튼 2"
                    android:textSize="20sp"
                    android:background="@drawable/bg_test_btn"
                    />

                <Button
                    android:id="@+id/test_c3_btn"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="버튼 3"
                    android:textSize="20sp"
                    android:background="@drawable/bg_test_btn"
                    />

                <Button
                    android:id="@+id/test_c4_btn"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="버튼 4"
                    android:textSize="20sp"
                    android:background="@drawable/bg_test_btn"
                    />

            </GridLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>